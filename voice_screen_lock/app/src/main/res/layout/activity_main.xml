                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="11dp"
                                android:src="@drawable/rate_us_" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
