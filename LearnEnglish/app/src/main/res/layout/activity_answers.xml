<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.highlightindianapps.learnenglishfromhindi.AnswersActivity">


    <Button
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/prev_btn"
        android:layout_alignBottom="@+id/prev_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="@color/btnBackground"
        android:text="Next"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/prev_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ans_ans"
        android:layout_alignStart="@+id/ans_ans"
        android:layout_below="@+id/ans_ans"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/btnBackground"
        android:text="Prev"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/ans_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ans_ans"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/ans_ans"
        android:layout_marginTop="106dp"
        android:text="TextView"
        android:textColor="@color/error_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ans_ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ans_question"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="49dp"
        android:text="TextView"
        android:textColor="@color/successs_color"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/next_btn"
        android:layout_marginTop="35dp">

        <FrameLayout
            android:id="@+id/adAtAnswers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
