<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".SearchByDetailsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_margin="4dp"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/search_view_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginEnd="40dp"
                    android:background="#00000000"
                    android:hint="Name  (Required)"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="#557391"
                    android:inputType="textVisiblePassword"
                    android:layout_marginStart="20dp" />


                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/clear_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_close_black_24dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_margin="4dp"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/search_view_father_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginEnd="40dp"
                    android:background="#00000000"
                    android:hint="Father's Name"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="#557391"
                    android:inputType="textVisiblePassword"
                    android:layout_marginStart="20dp" />


                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/clear_fathers_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_close_black_24dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_margin="4dp"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:editable="false"
                    android:focusable="false"
                    android:id="@+id/search_view_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginEnd="40dp"
                    android:background="#00000000"
                    android:hint="Date Of Birth"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="#557391"
                    android:inputType="textVisiblePassword"
                    android:layout_marginStart="20dp" />


                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/clear_dob_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_close_black_24dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_margin="4dp"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <org.angmarch.views.NiceSpinner
                    android:layout_margin="2dp"
                    android:id="@+id/gender_spinner"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:textTint="@color/colorPrimaryDark"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_margin="4dp"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <org.angmarch.views.NiceSpinner
                    android:layout_margin="2dp"
                    android:id="@+id/states_spinner"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:textTint="@color/colorPrimaryDark"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_margin="4dp"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <org.angmarch.views.NiceSpinner
                    android:layout_margin="2dp"
                    android:id="@+id/district_spinner"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:textTint="@color/colorPrimaryDark"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_margin="4dp"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <org.angmarch.views.NiceSpinner
                    android:layout_margin="2dp"
                    android:id="@+id/constitution_spinner"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:textTint="@color/colorPrimaryDark"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_alignParentRight="true"
                    android:id="@+id/search_btn_details"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/colorPrimary"
                    android:text="Search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <include
        android:visibility="invisible"
        android:id="@+id/result_bottom_sheet"
        layout="@layout/content_bottom_sheet" />
</android.support.design.widget.CoordinatorLayout>