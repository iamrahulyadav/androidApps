<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.latesttrendingapps.template.RatingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/text"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp"
                android:gravity="end"
                android:layout_height="wrap_content">
                <!--<ImageView-->
                    <!--android:src="@drawable/canceld"-->
                    <!--android:layout_gravity="end"-->
                    <!--android:id="@+id/cancel_action"-->
                    <!--android:clickable="true"-->
                    <!--android:tint="#555"-->
                    <!--android:layout_marginTop="8dp"-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp" />-->
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:textSize="17dp"
                    android:text="Your opinion matters to us!"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/rating_text"
                    android:layout_marginTop="15dp"
                    android:textColor="#777"
                    android:layout_marginLeft="10dp"
                    android:textSize="17dp"
                    android:text="Do you find our app is providing Good Info? Please support us by giving us 5 star on Playstore!"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="37dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/full_star"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/full_star"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/full_star"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/full_star"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/full_star"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        >

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="#888"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ok"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/white"/>

    </LinearLayout>
    <ImageView
        android:src="@drawable/canceld"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:tint="#555"
        android:id="@+id/cancel_action"
        android:layout_marginBottom="0dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />
</RelativeLayout>
